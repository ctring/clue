{
  "name": "clue",
  "displayName": "Clue",
  "description": "",
  "publisher": "ctring",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Clue",
      "properties": {
        "clue.tsconfigRootDir": {
          "type": "string",
          "default": "./",
          "definitions": "Directory to find tsconfig"
        },
        "clue.includeFiles": {
          "type": "string",
          "default": "**/*.ts",
          "definitions": "Glob pattern of files to include in the analysis"
        },
        "clue.excludeFiles": {
          "type": "string",
          "default": "{**/node_modules/**,**/migrations/**}",
          "definitions": "Glob pattern of files to exclude from the analysis"
        },
        "clue.analyzeBatchSize": {
          "type": "number",
          "default": 25,
          "definitions": "Number of files to analyze in a batch"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clue",
          "title": "Clue",
          "icon": "media/clue-activitybar.svg"
        }
      ]
    },
    "views": {
      "clue": [
        {
          "id": "statistics",
          "name": "Statistics"
        },
        {
          "id": "recognized",
          "name": "Recognized"
        },
        {
          "id": "unknown",
          "name": "Unknown"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "clue.item.addNote",
          "when": "view == recognized || view == unknown",
          "group": "inline"
        },
        {
          "command": "clue.item.addNote",
          "when": "view == recognized || view == unknown"
        },
        {
          "command": "clue.item.clearNote",
          "when": "(view == recognized || view == unknown) && viewItem =~ /hasNote/",
          "group": "inline"
        },
        {
          "command": "clue.item.clearNote",
          "when": "(view == recognized || view == unknown) && viewItem =~ /hasNote/"
        },
        {
          "command": "clue.item.copy",
          "when": "view == recognized || view == unknown"
        },
        {
          "command": "clue.entity.remove",
          "when": "view == recognized && viewItem =~ /customEntity/"
        }
      ],
      "view/title": [
        {
          "command": "clue.entity.add",
          "when": "view == recognized",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "clue.item.show",
        "title": "Show Item"
      },
      {
        "command": "clue.item.copy",
        "title": "Copy"
      },
      {
        "command": "clue.item.addNote",
        "title": "Add Note",
        "icon": "$(note)"
      },
      {
        "command": "clue.item.clearNote",
        "title": "Clear Note",
        "icon": "$(clear-all)"
      },
      {
        "command": "clue.entity.add",
        "title": "New Entity",
        "category": "Clue",
        "icon": "$(add)"
      },
      {
        "command": "clue.entity.remove",
        "title": "Remove",
        "icon": "$(remove)"
      },
      {
        "command": "clue.reanalyze",
        "title": "Re-analyze",
        "category": "Clue",
        "icon": "$(sync)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/eslint": "^8.37.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/pluralize": "^0.0.29",
    "@types/vscode": "^1.77.0",
    "@vscode/test-electron": "^2.3.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "clipboardy": "^3.0.0",
    "eslint": "^8.36.0",
    "eslint-plugin-typeorm-analyzer": "^1.0.2",
    "pluralize": "^8.0.0"
  }
}
